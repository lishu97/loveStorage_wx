/* page/index/index.wxss */
page {
  padding: 2vw;
  box-sizing: border-box;
}
.itemContainer {
  margin-bottom: 2vw;
  padding-bottom: 2vw;
  border-bottom: 1px solid #ccc;
}
.itemHeader {
  display: flex;
}
.avatar {
  height: 13vw;
  width: 13vw;
  margin-right: 2vw;
  overflow: hidden;
  border-radius: 50%;
}
.avatar image {
  width:100%;
  height:100%;
}
.nickname {
  font-size: 18px;
  /* font-weight: bolder; */
}
.statusTime {
  display: flex;
}
.icon-shanchu {
  margin-left: 2vw;
  font-weight: bolder;
}
.addStatus text{
  position: fixed;
  font-size:17vw;
  bottom:4vw;
  right:8vw;
  color: #f99;
}